@model ObuvkaStore.Models.EntityModels.Products

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Добавление нового продукта</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
