@model IEnumerable<ObuvkaStore.Models.EntityModels.Products>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductsInfo.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_ua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_ru)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_eng)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductsInfo.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_ua)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_ru)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_eng)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id=item.id }) |
                @Html.ActionLink("Подробнее", "Details", new { id=item.id }) |
                @Html.ActionLink("Удалить", "Delete", new { id=item.id })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
